{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Agent Heartbeat",
    "description": "Schema for an AI agent's heartbeat message, used for discovery and health monitoring.",
    "type": "object",
    "properties": {
      "agent_id": { "type": "string", "description": "Unique ID of the agent" },
      "timestamp": { "type": "string", "format": "date-time", "description": "Time of heartbeat generation" },
      "capabilities": {
        "type": "object",
        "properties": {
          "consumes_context_types": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "type": { "type": "string" },
                "schema_version": { "type": "string", "pattern": "^(0|[1-9]\\d*)\\.(0|[1-9]\\d*)\\.(0|[1-9]\\d*)$" }
              },
              "required": ["type", "schema_version"],
              "additionalProperties": false
            }
          },
          "produces_decision_types": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "type": { "type": "string" },
                "schema_version": { "type": "string", "pattern": "^(0|[1-9]\\d*)\\.(0|[1-9]\\d*)\\.(0|[1-9]\\d*)$" }
              },
              "required": ["type", "schema_version"],
              "additionalProperties": false
            }
          }
        },
        "additionalProperties": false
      },
      "status": { "type": "string", "enum": ["online", "degraded", "offline"], "description": "Current status of the agent" }
    },
    "required": ["agent_id", "timestamp", "capabilities", "status"],
    "additionalProperties": false
  }